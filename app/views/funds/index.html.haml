%div.container
  %div
    %ol.breadcrumb
      %li
        %a{href: '/'}
          portada
      %li
        = link_to 'desc√∫brete', page_path('discover')
      %li
        = link_to 'existe', page_path('exist')
      %li.active
        funciona

  %h2.page-header Funciona

  %table.table.table-striped#funds
    %thead
      %tr
        %th Materia
        %th Ministerio
        %th Servicio publico
        %th Nombre
        %th Objetivo
        %th Postulacion quienes
        %th Postulacion cuando
        %th Postulacion como
    
    %tbody
      - @funds.each do |fund|
        %tr
          %td= fund.materia
          %td= fund.ministerio
          %td= fund.servicio_publico
          %td= fund.nombre
          %td= fund.objetivo
          %td= fund.postulacion_quienes
          %td= fund.postulacion_cuando
          %td= fund.postulacion_como

:javascript
  $(document).ready(function(){
    $('#funds').DataTable({
      "order": [[ 1, "desc" ]],
      "columnDefs": [
          {
              "targets": [ 4 ],
              "visible": false,
              "searchable": true
          }
      ]
    });
  });
